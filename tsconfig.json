{
  "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "checkJs": true,
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}